* {
    font:   "FiraCode Nerd Font Medium 12";

    bg0:     #161617;
    bg1:     #1B1B1C;
    fg0:     #C9C7CD;

    accent-color:     #85B5BA;
    urgent-color:     #F5A191;
    secondary-color:  #90B99F;

    background-color:   transparent;
    text-color:         @fg0;

    margin:     0;
    padding:    0;
    spacing:    0;

    border-color: @fg0;
}

window {
    location:   center;
    width:      480;
    padding: 2px;

    background-color:   @bg0;
}

mainbox {
  background-color: @bg0;
  padding: 3px;

  border: 2px solid;
}

inputbar {
    spacing:    8px;
    padding:    8px;

    border: 2px 2px 0 2px;

    background-color:   @bg1;
}

prompt, entry, element-icon, element-text {
    vertical-align: 0.5;
}

prompt {
    text-color: @accent-color;
}

textbox {
    padding:            8px;
    background-color:   @bg1;
}

listview {
    padding:    4px 0;
    lines:      8;
    columns:    1;

    border: 0 2px 2px 2px;

    fixed-height:   false;
}

element {
    margin: 0 10px;
    padding: 8px;
    spacing:    8px;
}

element normal normal {
    text-color: @fg0;
}

element normal urgent {
    text-color: @urgent-color;
}

element normal active {
    text-color: @accent-color;
}

element alternate active {
    text-color: @accent-color;
}

element selected {
    text-color: @accent-color;
}

element selected normal, element selected active {
    background-color:   @bg1;
    border-color: @accent-color;
    border: 2px dash;
}

element selected urgent {
    background-color:   @urgent-color;
}

element-icon {
    size:   0.8em;
}

element-text {
    text-color: inherit;
    border: 2px;
    border-color: @fg0;
}
