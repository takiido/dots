(defwidget mode[]
  (box
    :width "100px"
    :hexpand false
    :class "bar__mode ${var_mode == 'tablet' ? 'bar__mode--tablet' :
                          var_mode == 'dock' ? 'bar__mode--dock' : 'bar__mode--normal'}"
    :geometry (geometry
                :width "200px")
    (label
      :class "bar__mode-lbl"
      :text "NORMAL")))
